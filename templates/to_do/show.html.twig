{% extends 'base.html.twig' %}

{% block title %}Tâche {% endblock %}

{% block body %}
    <h1 class="lead text-center font-weight-bold">Tâche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ to_do.id }}</td>
            </tr>
            <tr>
                <th>Tâche</th>
                <td>{{ to_do.task }}</td>
            </tr>
             <tr>
                <th>Projet</th>
                <td>{{ to_do.project }}</td>
            </tr>
             <tr>
                <th>Statut</th>
                <td>{{ to_do.status }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-row">
    <a class="btn btn-info btn-sm" href="{{ path('to_do_index') }}"><i class="fas fa-arrow-left"></i></a>

    <a class="btn btn-success btn-sm" href="{{ path('to_do_edit', {'id': to_do.id}) }}"><i class="fas fa-pencil-alt"></i></a>

    {{ include('to_do/_delete_form.html.twig') }}
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('statement') }}
{% endblock %}
